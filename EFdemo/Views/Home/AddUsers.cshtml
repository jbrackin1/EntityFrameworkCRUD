@model EFdemo.Models.UserModel

@{
    ViewData["Title"] = "AddUsers";
}

<form action="/home/addusers" method="post">
    <div class="form-group">
        <label>Email Address</label>
        <input type="email" placeholder="Enter email" asp-for="Email">
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Name</label>
        <input type="text" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>UserName</label>
        <input type="text" asp-for="UserName" />
        <span asp-validation-for="UserName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Age</label>
        <input type="number" asp-for="Age" />
        <span asp-validation-for="Age" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
<div class="container">
    @if(ViewBag.users != null && ViewBag.users.Count >= 1)
    {
        <table class="table table-dark">
            <thead>
                <tr>
                    <th scope="col">Name</th>
                    <th scope="col">Age</th>
                    <th scope="col">Username</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in ViewBag.users)
                {
                    <tr>
                        <td>@user.Name</td>
                        <td>@user.Age</td>
                        <td>@user.UserName</td>
                    </tr>
                }

            </tbody>
        </table>
    }
</div>
